#ifndef MNC_Tok
#define MNC_Tok
#include <stdio.h>

typedef int TOK_offset_t;

typedef struct {
	FILE* file;  // 대상 파일
	TOK_offset_t errpos; // 문제 발생지.
} Tok;

// TOK==Module Prefix, Tok==struct name

int Tok_scan(Tok *tok); // 0 == 정상, 나머지 == 파싱 에러 발생
int Tok_setFile(Tok *tok, FILE* file); // 0 == 정상, 나머지 == 에러 발생
void TOK_strerr(char *buf, int errno); // 파싱 에러 코드를 문자열로 변환

#endif // MNC_Tok
